<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryActivity">

  <TextView
      android:id="@+id/idDelivery"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:fontFamily="@font/italianno"
      android:text="@string/votre_commande_est_en_cours_de_livraison"
      android:textAlignment="center"
      android:textColor="@color/green_italie_2"
      android:textSize="30sp"
      android:textStyle="normal|bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/animationView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.397"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/idDelivery"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/delivery_animation" />

  <Button
      android:id="@+id/idDeliveryReturnToHome"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:backgroundTint="@color/green_italie_2"
      android:elevation="10dp"
      android:fontFamily="sans-serif"
      android:text="@string/menu"
      android:textColor="#FFFFFF"
      android:textSize="18sp"
      android:textStyle="normal|bold"
      app:layout_constraintBottom_toBottomOf="@+id/animationView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/idDeliveryThanks"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="450dp"
      android:fontFamily="@font/italianno"
      android:text="@string/merci_pour_votre_commande_bient_t"
      android:textAlignment="center"
      android:textColor="@color/green_italie_2"
      android:textSize="24sp"
      android:textStyle="normal"
      app:layout_constraintBottom_toTopOf="@+id/idDeliveryReturnToHome"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/idDelivery" />
</androidx.constraintlayout.widget.ConstraintLayout>